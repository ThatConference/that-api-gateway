{
  "name": "that-api-gateway",
  "version": "1.0.0",
  "description": "THAT Apollo gateway",
  "main": "index.js",
  "engines": {
    "node": "10.15.0"
  },
  "scripts": {
    "build": "rimraf __build__ && babel ./src -d ./__build__ --copy-files --ignore ./**/__tests__",
    "postbuild": "cp .env __build__",
    "predeploy:local": "npm run build",
    "deploy:local": "cd ./__build__ && functions-framework --target=graphEndpoint --port=8000",
    "prestart:watch:this": "sleep 5",
    "start:watch:this": "nodemon -e env,js,json,graphql --watch src --ignore '*.test.js' --exec npm run deploy:local",
    "start:watch:events": "cd ../that-api-events && npm run start:watch",
    "start:watch:partners": "cd ../that-api-partners && npm run start:watch",
    "start:watch:sessions": "cd ../that-api-sessions && npm run start:watch",
    "start:watch:members": "cd ../that-api-members && npm run start:watch",
    "start:watch": "concurrently -n gateway,events,partners,sessions,members npm:start:watch:this npm:start:watch:events npm:start:watch:partners npm:start:watch:sessions npm:start:watch:members -c \"bgRed,bgGreen,bgCyan,bgYellow,bgMagenta\"",
    "test": "jest --coverage --passWithNoTests",
    "test:watch": "cross-env  jest --watchAll",
    "lint": "eslint 'src/**/*.js'",
    "validate": "concurrently npm:test npm:lint npm:build"
  },
  "dependencies": {
    "@apollo/gateway": "^0.11.5",
    "@sentry/node": "^5.10.2",
    "apollo-server-cloud-functions": "^2.9.14",
    "connect": "^3.7.0",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "firebase-admin": "^8.9.0",
    "firebase-functions": "^3.3.0",
    "graphql": "^14.5.8",
    "graphql-voyager": "^1.0.0-rc.28",
    "lodash": "^4.17.15",
    "pino": "^5.15.0",
    "pino-express": "^1.1.1",
    "response-time": "^2.3.2",
    "uuid": "^3.3.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/node": "^7.7.7",
    "@babel/preset-env": "^7.7.6",
    "@babel/register": "^7.7.7",
    "@google-cloud/functions-framework": "^1.3.2",
    "babel-jest": "^24.9.0",
    "concurrently": "^5.0.2",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^3.1.0",
    "jest-cli": "^24.9.0",
    "nodemon": "^2.0.2",
    "pino-pretty": "^3.5.0",
    "prettier-eslint": "^9.0.1",
    "prettier-eslint-cli": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run validate"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "rootDir": "./src",
    "coverageDirectory": "../__testCoverage__"
  }
}
